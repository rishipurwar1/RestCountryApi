<%- include('partials/header') %>
<a href="/" class="back"><button><i class="fas fa-arrow-left"></i>Back</button></a>
<main class="selected-country">
    <%data.forEach(country => {%>
    <div class="image">
        <img src="<%=country.flag%>" alt="">
    </div>
    <div class="about-country">
        <div class="details">
            <div class="info-one">
                <h1><%=country.name%></h1>
                <p>Native Name: <span><%=country.nativeName%></span></p>
                <p>Population: <span><%=country.population%></span></p>
                <p>Region: <span><%=country.region%></p>
                <p>Sub Region: <span><%=country.subregion%></p>
                <p>Capital: <span><%=country.capital%></p>
            </div>
            <div class="info-two">
                <p>Top Level Domain: <span><%=country.topLevelDomain[0]%></span></p>
                <p>Currencies: <span><%=country.currencies[0].name%></span></p>
                <p>Languages: 
                    <%country.languages.forEach(language => {%>
                        <span><%=language.name%></span>
                    <%});%>
                </p>
            </div>
        </div>
        <div class="border-countries">
            <p>Border Countries:
                <%country.borders.forEach(border => {%>
                    <a href="/country/border/<%=border%>"><button><%=border%></button></a>
                <%}) %>
            </p>
        </div>
    </div>
    <%});%>
</main>
<%- include('partials/footer') %>